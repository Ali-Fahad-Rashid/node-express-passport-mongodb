


<%- include('./includes/header') %>


<!-- <h1><%=post._id%></h1>
 -->
<br><br>
<div class="container center"> 
 <div class="row center">
    <div class="col s12 m6 center">
      <div class="card  center">
        <div class="card-content">
          <span class="card-title"><%=post.title%></span>
          <p><%=post.content%></p>
        </div>
        <div class="card-action">
   <div class="row">
     <div class="col s1">  
          <form action="/<%= post._id %>" method="POST" >
              <button class="btn red btn-small waves-effect waves-light" type="submit">Delete
                <i class="material-icons right">delete</i>
              </button>
          </form>
        </div>
        <div class="col s1">  

          <a class="btn orange btn-small waves-effect waves-light" href="/<%= post._id %>/edit">Edit</a>
        </div>
      </div>



        </div>
  
      </div>
      
    </div>
    <% post.images.forEach(image=>{ %>

      <img class="circle" src="../uploads/<%=image%>" height="200" width="200" />


      <% }) %>
  </div>
</div>




<%- include('./includes/footer') %>