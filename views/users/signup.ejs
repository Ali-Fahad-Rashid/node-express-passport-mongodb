<div class="container">
   <form action="/signup" method="POST" class="col s12" >

    <div class="">
      <div class="input-field col s6">
        <i class="material-icons prefix">account_circle</i>
        <input id="icon_prefix" name="username" type="text" class="validate" required>
        <label for="icon_prefix"><Title>username</Title>username</label>
      </div><br><br>
      <div class="input-field col s6">
        <i class="material-icons prefix">account_circle</i>
        <input id="icon_prefix" name="email" type="text" class="validate" required>
        <label for="icon_prefix"><Title></Title>email</label>
      </div><br><br>
      <div class="input-field col s6">
        <i class="material-icons prefix">mode_edit</i>
        <input id="textarea1" name="password" class="materialize-textarea" required></input>

        <label for="icon_telephone">password</label>
      </div><br><br>
      <div class="input-field col s6">
        <i class="material-icons prefix">mode_edit</i>
        <input id="textarea1" name="confirm" class="materialize-textarea" required></input>

        <label for="icon_telephone">confirm password</label>
      </div><br><br>

      <button class="btn waves-effect waves-light" type="submit" name="action">Sign Up
        <i class="material-icons right">send</i>
      </button>
    </div>
    <% if (messages.error) { %>
    <h1>  <%= messages.error %></h1>
    <% } %>
  </form>
</div>


